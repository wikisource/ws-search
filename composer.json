{
    "name": "wikisource/ws-search",
    "description": "A search tool for all Wikisources.",
    "license": "GPL-3.0+",
    "config": {
        "platform": {
            "php": "5.5.9"
        }
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "classmap": ["tests/TestBase.php"]
    },
    "require": {
        "wikisource/api": "^1.0",
        "addwiki/mediawiki-api": "dev-master",
        "addwiki/mediawiki-api-base": "2.*",
        "nikic/fast-route": "^1.0",
        "twig/twig": "^1.0",
        "yohang/calendr": "^1.0",
        "nayjest/str-case-converter": "^1.0",
        "dflydev/dot-access-data": "^1.0",
        "symfony/dom-crawler": "^3.1",
        "tedivm/stash": "^0.14.1",
        "symfony/console": "^3.1",
        "monolog/monolog": "^1.0"
    },
    "require-dev": {
        "mediawiki/mediawiki-codesniffer": "^13.0",
        "symfony/var-dumper": "^3.0",
        "pds/skeleton": "^1.0"
    },
    "scripts": {
        "post-install-cmd": [
            "php -r \"file_exists('config.php') || copy('config.dist.php', 'config.php');\""
        ],
        "post-update-cmd": [
            "php -r \"file_exists('config.php') || copy('config.dist.php', 'config.php');\""
        ]
    }
}
